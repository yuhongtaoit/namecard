<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhongwei.namecard.dao.ResourceDao" >
    <resultMap id="BaseResultMap" type="com.zhongwei.namecard.entity.ResourceEntity" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="url" property="url" jdbcType="VARCHAR" />
        <result column="resource_name" property="resourceName" jdbcType="VARCHAR" />
    </resultMap>
    
    <sql id="Base_Column_List" >
        id, url, resource_name
    </sql>

    <select id="getAll" resultMap="BaseResultMap" >
       SELECT 
       <include refid="Base_Column_List" />
	   FROM resource
    </select>

    <select id="getOne" parameterType="java.lang.Long" resultMap="BaseResultMap" >
        SELECT 
       <include refid="Base_Column_List" />
	   FROM resource
	   WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.zhongwei.namecard.entity.ResourceEntity" >
       INSERT INTO 
       		resource
       		(url,resource_name) 
       	VALUES
       		(#{url}, #{resourceName})
    </insert>
    
    <update id="update" parameterType="com.zhongwei.namecard.entity.ResourceEntity" >
       UPDATE 
       		resource 
       SET 
       	<if test="url != null">url = #{url},</if>
       	<if test="resourceName != null">resource_name = #{resourceName},</if>
       WHERE 
       		id = #{id}
    </update>
    
    <delete id="delete" parameterType="java.lang.Long" >
       DELETE FROM
       		 resource 
       WHERE 
       		 id =#{id}
    </delete>

</mapper>